<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentEmptyTodayData">


    <ImageView
        android:id="@+id/emptyDataImage"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_empty_data_24dp" />

    <TextView
        android:id="@+id/emptyDataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Sorry, no event today."
        android:textSize="15sp"
        android:layout_below="@+id/emptyDataImage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Please check List all event for further details."
        android:textSize="15sp"
        android:layout_below="@+id/emptyDataText"/>

</RelativeLayout>