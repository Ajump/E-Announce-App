<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16sp"
        android:layout_marginLeft="16sp">

        <RelativeLayout
            android:id="@+id/parentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewEventName_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="left"
                android:text="Name"
                android:ellipsize="end"
                android:textColor="#000"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/organizerLayout"
            android:layout_below="@+id/parentName">

            <TextView
                android:id="@+id/view_Organizer_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Organizer"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/organizerLayout">

            <TextView
                android:id="@+id/view_Category_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Category"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/organizerLayout"
            android:layout_marginRight="16sp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/viewCoupon_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_local_play_default_24dp"/>

            <ImageView
                android:id="@+id/viewFood_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6sp"
                android:layout_toRightOf="@+id/viewCoupon_id"
                android:src="@drawable/ic_restaurant_default_24dp"/>

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>